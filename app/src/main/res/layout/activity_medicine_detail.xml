<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Pill Alert -->
    <include layout="@layout/component_header_with_back_btn" />

    <!-- Page Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:gravity="left"
            android:text="Detail data penyakit"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>


    <ScrollView
        android:layout_width="377dp"
        android:layout_height="153dp"
        android:layout_marginBottom="16dp"
        android:scrollbarStyle="outsideInset">

        <!-- Card Disease Detail -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:id="@+id/cardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="start"
                        android:padding="0dp">

                        <!-- Diseases Title -->
                        <TextView
                            android:id="@+id/diseaseName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sakit Radang Tenggorokan"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Date Information -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_date"
                        android:contentDescription="Date Icon" />

                    <TextView
                        android:id="@+id/diseaseDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21 Januari 2025"
                        android:layout_marginStart="8dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Diseases Description -->
                <TextView
                    android:id="@+id/diseaseDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Ceritanya sakit radang tenggorokan Ceritanya sakit radang tenggorokan Ceritanya sakit radang tenggorokan Ceritanya sakit radang tenggorokan Ceritanya sakit radang tenggorokan Ceritanya sakit radang tenggorokan Ceritanya sakit radang tenggorokan Ceritanya sakit radang tenggorokan Ceritanya sakit radang tenggorokan Ceritanya sakit radang tenggorokan "
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>

    <!-- Page Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pageTitleMedicine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:gravity="left"
            android:text="Daftar obat yang dikonsumsi"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>

    <ScrollView
        android:layout_width="377dp"
        android:layout_height="290dp"
        android:layout_marginBottom="16dp"
        android:scrollbarStyle="outsideInset">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical" >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewMedicine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnAddMedicine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#3B82F6"
            android:text="Tambah Data Obat" />

    </LinearLayout>

    <!-- Illustration -->

    <!-- Message -->

    <!-- Buttons -->
</LinearLayout>
