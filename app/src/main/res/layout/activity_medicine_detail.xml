<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Pill Alert -->
    <include layout="@layout/component_header_with_back_btn" />

    <!-- Page Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:gravity="left"
            android:text="Detail data obat"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>


    <ScrollView
        android:layout_width="377dp"
        android:layout_height="135dp"
        android:layout_marginBottom="16dp"
        android:scrollbarStyle="outsideInset">

        <!-- Card Medicine Detail -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:id="@+id/cardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="start"
                        android:padding="0dp">

                        <!-- Medicines Title -->
                        <TextView
                            android:id="@+id/medicineName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paracetamol"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Edit and Delete Icons -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:orientation="horizontal"
                        android:padding="0dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentEnd="true"
                            android:padding="0dp">

<!--                            <ImageView-->
<!--                                android:id="@+id/editIcon"-->
<!--                                android:layout_width="24dp"-->
<!--                                android:layout_height="24dp"-->
<!--                                android:layout_marginEnd="16dp"-->
<!--                                android:contentDescription="Edit Icon"-->
<!--                                android:gravity="end"-->
<!--                                android:src="@drawable/ic_edit" />-->

<!--                            <ImageView-->
<!--                                android:id="@+id/deleteIcon"-->
<!--                                android:layout_width="24dp"-->
<!--                                android:layout_height="24dp"-->
<!--                                android:contentDescription="Delete Icon"-->
<!--                                android:gravity="end"-->
<!--                                android:src="@drawable/ic_delete" />-->

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <!-- Time Information -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_clock"
                        android:contentDescription="Clock Icon" />

                    <TextView
                        android:id="@+id/medicineConsumeSummary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3x sehari @ 1 tablet"
                        android:layout_marginStart="8dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Medicines Description -->
                <TextView
                    android:id="@+id/medicineDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Untuk demam dan pereda nyeri"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>

    <!-- Page Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pageTitleMedicine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:gravity="left"
            android:text="Jadwal minum obat"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>

    <ScrollView
        android:layout_width="377dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:scrollbarStyle="outsideInset">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical" >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewMedicineTracking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
