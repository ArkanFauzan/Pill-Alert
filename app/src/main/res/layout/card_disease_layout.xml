<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:id="@+id/cardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="start"
                android:padding="0dp">

                <!-- Diseases Title -->
                <TextView
                    android:id="@+id/diseaseName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sakit Radang Tenggorokan"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Edit and Delete Icons -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal"
                android:padding="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    android:padding="0dp">

                    <ImageView
                        android:id="@+id/editIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="Edit Icon"
                        android:gravity="end"
                        android:src="@drawable/ic_edit" />

                    <ImageView
                        android:id="@+id/deleteIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Delete Icon"
                        android:gravity="end"
                        android:src="@drawable/ic_delete" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <!-- Date Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_date"
                android:contentDescription="Date Icon" />

            <TextView
                android:id="@+id/diseaseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21 Januari 2025"
                android:layout_marginStart="8dp"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Diseases Description -->
        <TextView
            android:id="@+id/diseaseDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Ceritanya sakit radang tenggorokan"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
